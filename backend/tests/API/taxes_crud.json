{
  "info": {
    "name": "IDURAR Taxes CRUD API",
    "_postman_id": "taxes-crud-001",
    "description": "Test Taxes CRUD operations. Note: Delete is forbidden by design.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login - Get Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@admin.com\",\n  \"password\": \"admin123\"\n}"
        },
        "url": {
          "raw": "http://localhost:8888/api/login",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8888",
          "path": [
            "api",
            "login"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "pm.test('Login successful', function() {",
              "    pm.expect(res.success).to.be.true;",
              "});",
              "if(res.success) {",
              "    pm.environment.set('authToken', res.result.token);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Create Tax",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"taxName\": \"Test Tax {{$timestamp}}\",\n  \"taxValue\": 15,\n  \"isDefault\": false,\n  \"enabled\": true\n}"
        },
        "url": {
          "raw": "http://localhost:8888/api/taxes/create",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8888",
          "path": [
            "api",
            "taxes",
            "create"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "pm.test('Status code 200', function() {",
              "    pm.expect(pm.response.code).to.equal(200);",
              "});",
              "pm.test('Response success true', function() {",
              "    pm.expect(res.success).to.be.true;",
              "});",
              "if(res.success) {",
              "    pm.environment.set('taxId', res.result._id);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Read Tax",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8888/api/taxes/read/{{taxId}}",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8888",
          "path": [
            "api",
            "taxes",
            "read",
            "{{taxId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "pm.test('Status code 200', function() {",
              "    pm.expect(pm.response.code).to.equal(200);",
              "});",
              "pm.test('Tax ID matches', function() {",
              "    pm.expect(res.result._id).to.eql(pm.environment.get('taxId'));",
              "});",
              "pm.test('Tax Value matches', function() {",
              "    pm.expect(res.result.taxValue).to.eql(15);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Update Tax",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"taxName\": \"Updated Tax Name\",\n  \"taxValue\": 20\n}"
        },
        "url": {
          "raw": "http://localhost:8888/api/taxes/update/{{taxId}}",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8888",
          "path": [
            "api",
            "taxes",
            "update",
            "{{taxId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "pm.test('Status code 200', function() {",
              "    pm.expect(pm.response.code).to.equal(200);",
              "});",
              "pm.test('Response success true', function() {",
              "    pm.expect(res.success).to.be.true;",
              "});",
              "pm.test('Tax Name updated', function() {",
              "    pm.expect(res.result.taxName).to.eql(\"Updated Tax Name\");",
              "});",
              "pm.test('Tax Value updated', function() {",
              "    pm.expect(res.result.taxValue).to.eql(20);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "List Taxes",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8888/api/taxes/list",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8888",
          "path": [
            "api",
            "taxes",
            "list"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "pm.test('Status code 200', function() {",
              "    pm.expect(pm.response.code).to.equal(200);",
              "});",
              "pm.test('Result is array', function() {",
              "    pm.expect(Array.isArray(res.result)).to.be.true;",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Delete Tax (Expect Forbidden)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8888/api/taxes/delete/{{taxId}}",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8888",
          "path": [
            "api",
            "taxes",
            "delete",
            "{{taxId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "pm.test('Status code 403', function() {",
              "    pm.expect(pm.response.code).to.equal(403);",
              "});",
              "pm.test('Response success false', function() {",
              "    pm.expect(res.success).to.be.false;",
              "});",
              "pm.test('Error message correct', function() {",
              "    pm.expect(res.message).to.include(\"you can't delete tax\");",
              "});"
            ]
          }
        }
      ]
    }
  ]
}