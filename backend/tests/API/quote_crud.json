              "});",
              "pm.test('Quote ID matches', function() {",
              "    pm.expect(res.result._id).to.eql(pm.environment.get('quoteId'));",
              "});",
              "pm.test('Total calculated correctly', function() {",
              "    // 5 * 100 = 500 subtotal. 10% tax = 50. Total = 550",
              "    pm.expect(res.result.total).to.eql(550);",
              "});"
            ]
          }
        }
