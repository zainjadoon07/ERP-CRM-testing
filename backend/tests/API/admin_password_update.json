{
  "info": {
    "name": "IDURAR Admin Password Update API",
    "_postman_id": "admin-password-update-001",
    "description": "Test PATCH /api/admin/password-update/:id",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login - Get Token and ID",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@admin.com\",\n  \"password\": \"admin123\"\n}"
        },
        "url": {
          "raw": "http://localhost:8888/api/login",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8888",
          "path": [
            "api",
            "login"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "pm.test('Login successful', function() {",
              "    pm.expect(res.success).to.be.true;",
              "});",
              "if(res.success) {",
              "    pm.environment.set('authToken', res.result.token);",
              "    pm.environment.set('userId', res.result._id);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Update Admin Password - Demo User (Expect Failure)",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"password\": \"newpassword123\"\n}"
        },
        "url": {
          "raw": "http://localhost:8888/api/admin/password-update/{{userId}}",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8888",
          "path": [
            "api",
            "admin",
            "password-update",
            "{{userId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "pm.test('Status code 403 (Forbidden for Demo User)', function() {",
              "    pm.expect(pm.response.code).to.equal(403);",
              "});",
              "pm.test('Response success false', function() {",
              "    pm.expect(res.success).to.be.false;",
              "});",
              "pm.test('Error message is correct', function() {",
              "    pm.expect(res.message).to.include(\"you couldn't update demo password\");",
              "});"
            ]
          }
        }
      ]
    }
  ]
}